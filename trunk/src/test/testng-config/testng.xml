<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="AntScriptVisualizer Suite">
  <test verbose="105" name="Unit tests" annotations="JDK">
    <groups>
      <run>
        <include name="unit"/>
        <!--<include name="cRoy"/>-->
        <exclude name="failed"  />
      </run>
    </groups>
      <packages>
            <package name="com.nurflugel.util.antscriptvisualizer2.*" />
      </packages>
  </test>

  <test verbose="1" name="DOT tests" annotations="JDK">
    <groups>
      <run>
        <include name="dot"/>
        <exclude name="failed"  />
      </run>
    </groups>
      <packages>
            <package name="com.nurflugel.util.antscriptvisualizer2.*" />
      </packages>
  </test>

  <test verbose="1" name="Master build tests" annotations="JDK">
    <groups>
      <run>
        <include name="master"/>
        <exclude name="failed"  />
      </run>
    </groups>
      <packages>
            <package name="com.nurflugel.util.antscriptvisualizer2.*" />
      </packages>
  </test>

  <test verbose="105" name="Gradle parser tests" annotations="JDK">
    <groups>
      <run>
        <include name="gradle"/>
        <exclude name="failed"  />
      </run>
    </groups>
      <packages>
            <package name="com.nurflugel.util.gradlescriptvisualizer.*" />
      </packages>
  </test>



</suite>
